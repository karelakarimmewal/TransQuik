<Window x:Class="TranQuik.SaleModePop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:local="clr-namespace:TranQuik"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        WindowState="Normal"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="SaleModePop" Height="300" Width="450">
    <Grid  Background="{StaticResource SecondaryBackgroundColor}" Effect="{StaticResource DropShadowEffect}">
        <!-- GridSaleMode where buttons will be dynamically added -->
        <Grid x:Name="GridSaleMode" Margin="0">
            <!-- Content will be populated programmatically -->
        </Grid>
    </Grid>

</Window>
